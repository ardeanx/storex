<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.storex.controller.UserController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <HBox alignment="CENTER_LEFT">
        <Label text="Users" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Add New User" onAction="#handleAddUser"
                style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold; -fx-padding: 10 20;"/>
    </HBox>

    <TableView fx:id="tableUsers" VBox.vgrow="ALWAYS" style="-fx-background-radius: 5; -fx-border-radius: 5;">
        <columns>
            <TableColumn fx:id="colUsername" text="Username" prefWidth="150"/>
            <TableColumn fx:id="colFullName" text="Full Name" prefWidth="250"/>
            <TableColumn fx:id="colRole" text="Role" prefWidth="120"/>
            <TableColumn fx:id="colAction" text="Actions" prefWidth="150" style="-fx-alignment: CENTER;"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>