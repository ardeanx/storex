<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15.0" prefWidth="400.0"
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.storex.controller.ProductFormController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <children>
        <Label fx:id="lblTitle" text="Add/Edit Product" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            <children>
                <Label text="Barcode:" GridPane.rowIndex="0" />
                <TextField fx:id="txtBarcode" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Product Name:" GridPane.rowIndex="1" />
                <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Price:" GridPane.rowIndex="2" />
                <TextField fx:id="txtPrice" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Stock:" GridPane.rowIndex="3" />
                <TextField fx:id="txtStock" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Category:" GridPane.rowIndex="4" />
                <ComboBox fx:id="cbCategory" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </children>
        </GridPane>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button onAction="#handleCancel" text="Cancel" />
                <Button fx:id="btnSave" onAction="#handleSave" styleClass="accent" text="Save" />
            </children>
        </HBox>
    </children>
</VBox>