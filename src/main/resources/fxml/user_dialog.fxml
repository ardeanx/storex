<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.storex.controller.UserDialogController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <GridPane hgap="10" vgap="10">
        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtUsername" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Contoh: kasir1"/>

        <Label text="Nama Lengkap:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtFullName" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Nama Asli"/>

        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <PasswordField fx:id="txtPassword" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="comboRole" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="150"/>
    </GridPane>
</VBox>